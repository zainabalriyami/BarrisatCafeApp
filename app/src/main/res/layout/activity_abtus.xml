<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/signup"
    tools:context=".ABTUs">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">


    <TextView
        android:id="@+id/abutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our first coffee shop was opened in 2014 and since then we have been able to expand to 16 branches in the Sultanate of Oman and in United Arab Emirates.

Our vision is to reach the world and be present in all countries and let them experience our expertise in presenting Italian and American dishes in a modern way that suits all tastes. We have innovated the concept of international dishes with special local touch"
        android:textAlignment="center"
        android:textColor="#294d33"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>